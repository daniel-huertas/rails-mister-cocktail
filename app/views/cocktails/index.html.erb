
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url( <%= image_url 'bannercocktail.jpg' %>);">



  <div class="banner-content">
    <h1>Mr.Cocktail</h1>
    <p>Amazing recipes</p>
  </div>
</div>



<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
       <div class="card-category">
        <h4> <%= cocktail.name %> </h4>
        <!--  <p> <%= cocktail.ingredients %> </p> -->
        <br>
        <p> <%= link_to 'Show', cocktail, class: "btn btn-primary" %>
          <br>
        </div>
        <img class="card-user avatar" src="user.jpg">
      </div>
    </div>
    <% end %>
  </div>


  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="card">
        <%= link_to 'Add a new cocktail!', new_cocktail_path, class: "btn btn-success"  %>
      </div>
    </div>
  </div>
</div>


