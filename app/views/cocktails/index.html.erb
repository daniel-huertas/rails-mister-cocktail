
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url( <%= image_url 'bannercocktail.jpg' %>);">



  <div class="banner-content">
    <h1>Mr.Cocktail</h1>
    <p>Amazing recipes</p>
  </div>
</div>



<div class="container">

  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
       <div class="card-category">
        <!--  <p> <%= cocktail.ingredients %> </p> -->
        <br>
        <p>
          <%= link_to cocktail_path(cocktail) do %>
          <%= cl_image_tag cocktail.photo, height: 250, width: 250, crop: :fill, radius: "max" %>
          <% end %>
          <br>
        </div>
      </div>
    </div>
    <% end %>
  </div>




  <br><br><br>
  <div class="text-center">
    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <div class="card">
          <%= link_to 'Add a new cocktail!', new_cocktail_path, class: "btn btn-success"  %>
          <br><br>
        </div>
      </div>
    </div>
  </div>
</div>















